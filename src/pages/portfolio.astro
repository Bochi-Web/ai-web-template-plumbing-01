---
import BaseLayout from '../layouts/BaseLayout.astro';
import Breadcrumb from '../components/sections/Breadcrumb.astro';
---

<BaseLayout title="Projects - Hendrio Plumbing">
  <Breadcrumb title="Projects" />

  <div data-section="portfolio-grid" class="portfolio-section">
    <div class="container">
      <div class="row">
        <div class="col-lg-12">
          <div class="hendrio-section-title text-center padding-lg">
            <h4>Our Projects</h4>
