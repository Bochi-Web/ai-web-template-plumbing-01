---
import { siteConfig } from '../../data/siteConfig';
---

<div data-section="footer" data-global="true" class="footer-section">
  <div class="container">
    <div class="row contact-section">
      <div class="col-lg-4 col-md-6">
        <div class="contact-informations">
          <div class="contact-icon">
            <img src="/images/resource/location.png" alt="location">
          </div>
          <div class="contact-title-content">
            <h2 class="contact-title">Office Locations</h2>
            <span class="contact-text">{siteConfig.address.street}<br>{siteConfig.address.city}, {siteConfig.address.state}</span>
          </div>
        </div>
      </div>
      <div class="col-lg-4 col-md-6">
        <div class="contact-informations">
          <div class="contact-icon">
            <img src="/images/resource/call.png" alt="phone">
          </div>
          <div class="contact-title-content">
            <h2 class="contact-title">Feel Free to Call Us</h2>
            <span class="contact-text2">{siteConfig.phone}</span>
            <span class="contact-text">Emergency</span>
          </div>
        </div>
      </div>
      <div class="col-lg-4 col-md-6">
        <div class="contact-informations">
          <div class="contact-icon">
            <img src="/images/resource/sms.png" alt="email">
          </div>
          <div class="contact-title-content">
            <h2 class="contact-title">Send E-Mail</h2>
            <span class="contact-text">{siteConfig.email}</span>
          </div>
        </div>
      </div>
    </div>
    <div class="row footer-bg">
      <div class="col-lg-3 col-md-6">
        <div class="widget widgets-company-info">
          <div class="dreamhub-logo">
            <a class="logo_thumb" href="/" title={siteConfig.businessName}>
              <img src="/images/logo.png" alt={siteConfig.businessName} />
            </a>
          </div>
          <div class="company-info-desc">
            <p>Professionally develop long-term performance based architectures metrics rather than</p>
          </div>
          <div class="follow-company-icon">
            <a href={siteConfig.socials.facebook}> <i class="fab fa-facebook-f"></i> </a>
            <a href={siteConfig.socials.twitter}> <i class="fab fa-twitter"> </i> </a>
            <a href={siteConfig.socials.linkedin}> <i class="fab fa-linkedin-in"></i> </a>
            <a href={siteConfig.socials.pinterest}> <i class="fab fa-pinterest-p"></i> </a>
          </div>
        </div>
      </div>
      <div class="col-lg-3 col-md-6">
        <div class="widget widget-nav-menu">
          <h4 class="widget-title">Popular Services</h4>
          <div class="menu-quick-link-content">
            <ul class="footer-menu">
              {siteConfig.footerServices.map((s) => (
                <li><a href="/service">{s}</a></li>
              ))}
            </ul>
          </div>
        </div>
      </div>
      <div class="col-lg-3 col-md-6">
        <div class="widget widget-nav-menu">
          <h4 class="widget-title">Useful Links</h4>
          <div class="menu-quick-link-content">
            <ul class="footer-menu">
              {siteConfig.footerLinks.map((link) => (
                <li><a href={link.href}>{link.label}</a></li>
              ))}
            </ul>
          </div>
        </div>
      </div>
      <div class="col-lg-3 col-md-6">
        <div class="widget widget-nav-thumb-post">
          <h4 class="widget-title">Latest News</h4>
          <div class="footer-thumb-post style-two">
            <div class="post-thumb">
              <a href="/blog-details"><img src="/images/resource/post1.jpg" alt="blog"></a>
            </div>
            <div class="footer-post-title">
              <h4><a href="/blog-details">Top 10 House Basin Water Pipe Repair Tips</a></h4>
              <span>10 July, 2023</span>
            </div>
          </div>
          <div class="footer-thumb-post">
            <div class="post-thumb">
              <a href="/blog-details"><img src="/images/resource/post2.jpg" alt="blog"></a>
            </div>
            <div class="footer-post-title">
              <h4><a href="/blog-details">Repairing Home Pipeline Using Equipments</a></h4>
              <span>10 July, 2023</span>
            </div>
          </div>
        </div>
      </div>
      <div class="footer-shape">
        <img src="/images/resource/footer-shp.png" alt="">
      </div>
    </div>
  </div>
</div>

<div class="footer-bottom-section">
  <div class="container">
    <div class="row">
      <div class="col-lg-6 col-md-6">
        <div class="footer-bottom-content">
          <div class="footer-bottom-content-copy">
            <p>Copyright &copy; {new Date().getFullYear()} <span>{siteConfig.businessName}</span>. All rights reserved.</p>
          </div>
        </div>
      </div>
      <div class="col-lg-6 col-md-6">
        <div class="footer-bottom-menu text-right">
          <ul>
            <li><a href="#">Terms Condition</a></li>
            <li><a href="#">Privacy Policy</a></li>
          </ul>
        </div>
      </div>
    </div>
  </div>
</div>
