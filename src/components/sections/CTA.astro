<div data-section="cta" class="call-to-action">
  <div class="container">
    <div class="row call-to-bg align-items-center">
      <div class="col-lg-8 col-md-12 pl-0">
        <div class="call-to-action-box">
          <div class="call-to-thumb">
            <img src="/images/resource/call-1.jpg" alt="">
          </div>
          <div class="call-to-content">
            <h2 class="call-title">Are Ready to Start Your Projects?</h2>
            <span class="call-desc">Free Call for Booking Online Free Consultation</span>
          </div>
        </div>
      </div>
      <div class="col-lg-4 col-md-12">
        <button class="button text-right" id="bookbtn">Booking Online <i class="bi bi-plus"></i></button>
        <div id="bookmodal" class="modal">
          <div class="modal-content">
            <span class="close">&times;</span>
            <div class="container">
              <h2 class="form-booking-title">Please Complete this Booking a Services form:</h2>
              <form action="#" method="POST">
                <div class="row">
                  <div class="col-lg-6 col-md-6">
                    <div class="form-box">
                      <input type="text" placeholder="Your Name*">
                    </div>
                  </div>
                  <div class="col-lg-6 col-md-6">
                    <div class="form-box">
                      <input type="email" placeholder="Enter E-Mail">
                    </div>
                  </div>
                  <div class="col-lg-6 col-md-6">
                    <div class="form-box">
                      <input type="tel" placeholder="Mobile No.">
                    </div>
                  </div>
                  <div class="col-lg-6 col-md-6">
                    <div class="form-box">
                      <input type="date" id="date" name="date">
                    </div>
                  </div>
                  <div class="col-lg-12">
                    <div class="form-box">
                      <select id="service" name="service">
                        <option value="">Select Service*</option>
                        <option value="kitchen">Kitchen Plumbing</option>
                        <option value="basement">Basement Plumbing</option>
                        <option value="bathroom">Bathroom Plumbing</option>
                        <option value="water-heater">Water Heater Installing</option>
                      </select>
                    </div>
                  </div>
                  <div class="col-lg-12">
                    <div class="form-box">
                      <textarea name="message" cols="30" rows="10" placeholder="Write Message:"></textarea>
                    </div>
                  </div>
                  <div class="col-lg-12">
                    <div class="contact-form">
                      <button type="submit">Submit Request</button>
                    </div>
                  </div>
                </div>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
